<odoo>
  <data>

    <!-- =========================
         Maintenance Team Views
         ========================= -->
    <record id="view_gearguard_team_tree" model="ir.ui.view">
        <field name="name">gearguard.team.tree</field>
        <field name="model">gearguard.team</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Teams">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_gearguard_team_form" model="ir.ui.view">
        <field name="name">gearguard.team.form</field>
        <field name="model">gearguard.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="member_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gearguard_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gearguard.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- =========================
         Equipment Views
         ========================= -->
    <record id="view_gearguard_equipment_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipments">
                <field name="name"/>
                <field name="serial_no"/>
                <field name="department"/>
                <field name="team_id"/>
                <field name="is_usable" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <!-- Smart Button: Link to Request Count [cite: User Request] -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="request_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_no"/>
                            <field name="department"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="team_id"/>
                            <field name="is_usable"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- =========================
         Maintenance Request Views
         ========================= -->
    <!-- Kanban View: Group by state, show Technician [cite: User Request] -->
    <record id="view_gearguard_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.request.kanban</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="name"/>
                <field name="priority"/>
                <field name="technician_id"/>
                <field name="equipment_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="equipment_id"/></div>
                                <div class="text-muted"><field name="scheduled_date"/></div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <!-- Technician Face -->
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View: Date Search [cite: User Request] -->
    <record id="view_gearguard_request_calendar" model="ir.ui.view">
        <field name="name">gearguard.request.calendar</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Calendar" date_start="scheduled_date" color="technician_id" mode="month">
                <field name="name"/>
                <field name="equipment_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_gearguard_request_tree" model="ir.ui.view">
        <field name="name">gearguard.request.tree</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Requests" decoration-info="state == 'new'" decoration-success="state == 'repaired'" decoration-danger="state == 'scrap'">
                <field name="name"/>
                <field name="scheduled_date"/>
                <field name="equipment_id"/>
                <field name="technician_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_gearguard_request_form" model="ir.ui.view">
        <field name="name">gearguard.request.form</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <button name="action_move_to_scrap" string="Scrap Equipment" type="object" class="oe_highlight" invisible="state == 'scrap'"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Subject (e.g. Leaking Oil)"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="request_type"/>
                            <field name="scheduled_date"/>
                        </group>
                        <group>
                            <field name="team_id"/>
                            <field name="technician_id"/>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter for history and communication -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_gearguard_request_search" model="ir.ui.view">
        <field name="name">gearguard.request.search</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <search string="Search Requests">
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="technician_id"/>
                <filter string="My Requests" name="my_requests" domain="[('technician_id', '=', uid)]"/>
                <filter string="To Do" name="todo" domain="[('state', 'in', ('new', 'in_progress'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Equipment" name="group_equipment" context="{'group_by': 'equipment_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_gearguard_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gearguard.request</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Maintenance Request!
            </p>
        </field>
    </record>

    <!-- =========================
         Menus
         ========================= -->
    <menuitem id="menu_gearguard_root" name="GearGuard" web_icon="gearguard,static/description/icon.png" sequence="10"/>

    <menuitem id="menu_gearguard_request" name="Maintenance Requests" parent="menu_gearguard_root" action="action_gearguard_request" sequence="10"/>
    
    <menuitem id="menu_gearguard_equipment" name="Equipments" parent="menu_gearguard_root" action="action_gearguard_equipment" sequence="20"/>
    
    <menuitem id="menu_gearguard_team" name="Maintenance Teams" parent="menu_gearguard_root" action="action_gearguard_team" sequence="30"/>

  </data>
</odoo>

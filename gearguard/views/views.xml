<odoo>
  <data>

    <!-- TEAMS -->
    <record id="view_gearguard_team_tree" model="ir.ui.view">
      <field name="name">gearguard.team.tree</field>
      <field name="model">gearguard.team</field>
      <field name="arch" type="xml">
        <tree string="Teams">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_gearguard_team_form" model="ir.ui.view">
      <field name="name">gearguard.team.form</field>
      <field name="model">gearguard.team</field>
      <field name="arch" type="xml">
        <form string="Team">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_gearguard_team" model="ir.actions.act_window">
      <field name="name">Teams</field>
      <field name="res_model">gearguard.team</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- EQUIPMENTS -->
    <record id="view_gearguard_equipment_tree" model="ir.ui.view">
      <field name="name">gearguard.equipment.tree</field>
      <field name="model">gearguard.equipment</field>
      <field name="arch" type="xml">
        <tree string="Equipments">
          <field name="name"/>
          <field name="serial_no"/>
          <field name="team_id"/>
          <field name="department"/>
          <field name="location"/>
          <field name="is_usable" widget="boolean_toggle"/>
        </tree>
      </field>
    </record>

    <!-- User Provided Equipment Form -->
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="request_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="serial_no"/>
                        <field name="department"/>
                        <field name="location"/>
                        <field name="team_id"/>
                        <field name="is_usable"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- REQUESTS -->
    <record id="view_gearguard_request_tree" model="ir.ui.view">
      <field name="name">gearguard.request.tree</field>
      <field name="model">gearguard.request</field>
      <field name="arch" type="xml">
        <tree string="Requests">
          <field name="name"/>
          <field name="equipment_id"/>
          <field name="technician_id"/>
          <field name="state" widget="badge" decoration-success="state == 'repaired'" decoration-info="state == 'new'"/>
        </tree>
      </field>
    </record>

    <record id="view_gearguard_request_form" model="ir.ui.view">
      <field name="name">gearguard.request.form</field>
      <field name="model">gearguard.request</field>
      <field name="arch" type="xml">
        <form string="Maintenance Request">
          <header>
            <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
          </header>
          <sheet>
            <group>
                <group>
                  <field name="name"/>
                  <field name="equipment_id"/>
                  <field name="request_type"/>
                </group>
                <group>
                  <field name="technician_id"/>
                  <field name="scheduled_date"/>
                  <field name="duration"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- User Provided Request Kanban -->
    <record id="view_gearguard_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.request.kanban</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="true">
                <field name="state"/>
                <field name="name"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div class="text-muted">
                                <field name="equipment_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="request_type" widget="label_selection"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- User Provided Calendar -->
    <record id="view_gearguard_request_calendar" model="ir.ui.view">
        <field name="name">gearguard.request.calendar</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Calendar" date_start="scheduled_date" color="technician_id" mode="month">
                <field name="name"/>
                <field name="equipment_id"/>
            </calendar>
        </field>
    </record>

    <record id="action_gearguard_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gearguard.request</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
    </record>


    <!-- MENUS -->
    <menuitem id="menu_gearguard_root" name="GearGuard" sequence="1"/>
    
    <menuitem id="menu_gearguard_request" name="Requests" parent="menu_gearguard_root" action="action_gearguard_request" sequence="10"/>
    
    <menuitem id="menu_gearguard_equipment" name="Equipments" parent="menu_gearguard_root" action="action_gearguard_equipment" sequence="20"/>
    
    <menuitem id="menu_gearguard_team" name="Teams" parent="menu_gearguard_root" action="action_gearguard_team" sequence="30"/>

  </data>
</odoo>
